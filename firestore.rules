
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção de comentários das aulas de confissão
    match /confession_lesson_comments/{commentId} {
      // Permite que qualquer usuário autenticado leia (get, list) os comentários.
      allow read: if request.auth != null;
      
      // Permite que um usuário autenticado crie um comentário,
      // mas somente se o 'userId' do comentário for o seu próprio.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Regras para a coleção de usuários
    match /users/{userId} {
      // Permite que um usuário leia e atualize seu próprio documento.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Permite a criação de um documento de usuário ao se registrar.
      allow create: if request.auth != null;
    }
  }
}
