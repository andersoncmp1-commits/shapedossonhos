rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para os comentários das aulas de confissão
    match /confession_lesson_comments/{commentId} {
      // Permite que qualquer usuário autenticado leia, liste e crie comentários.
      // A criação é segura, pois o ID do usuário é verificado na regra.
      allow list, read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Regras para o progresso do usuário (módulos e aulas)
    match /users/{userId} {
      // Permite que um usuário leia e escreva apenas em seu próprio documento.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}