/**
 * @fileoverview Firestore Security Rules for Prototyping.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by enforcing strict user-based authorization.
 * It is configured for rapid prototyping, so data shape validation is relaxed.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /confession_lesson_comments/{commentId}: Stores comments on confession lessons.
 *
 * Key Security Decisions:
 * - Users can only read/write their own user documents.
 * - Comments are publicly readable, but only authenticated users can create, update, or delete them.
 *   Comment creation enforces that the `userId` matches the authenticated user's UID.
 *
 * Denormalization for Authorization:
 * - The `confession_lesson_comments` documents are assumed to contain a `userId` field.
 *   This denormalization allows security rules to quickly verify ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user documents.
     * @path /users/{userId}
     * @allow (create) User 'test_user' can create their own document.
     * @deny (create) User 'test_user' cannot create a document with a different user ID.
     * @allow (get, list, update, delete) User 'test_user' can read, update, and delete their own document.
     * @deny (get, list, update, delete) User 'another_user' cannot read, update, or delete 'test_user' document.
     * @principle Enforces document ownership.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing of all users
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to confession lesson comments.
     * @path /confession_lesson_comments/{commentId}
     * @allow (get, list) Any user can read comments.
     * @allow (create) Authenticated users can create comments with their own user ID.
     * @deny (create) Users cannot create comments with mismatched user IDs.
     * @allow (update, delete) Only the comment owner can update or delete their comment.
     * @deny (update, delete) Other users cannot update or delete comments.
     * @principle Allows public reads but enforces ownership for writes.
     */
    match /confession_lesson_comments/{commentId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isExistingOwner(resource.data.userId);
      allow delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}