rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção de usuários:
    // Permite que um usuário leia e escreva apenas em seu próprio documento.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Regra para a coleção de comentários:
    // Permite que qualquer pessoa leia os comentários e que usuários autenticados criem os seus próprios.
    match /confession_lesson_comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
