rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção de progresso dos usuários.
    // Permite que um usuário leia e escreva apenas em seu próprio documento.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Regra para a coleção de comentários das aulas de confissão.
    match /confession_lesson_comments/{document=**} {
      // Qualquer pessoa pode ler e listar os comentários.
      allow read: if true;
      // Apenas usuários autenticados podem criar comentários, e apenas em seu próprio nome.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
