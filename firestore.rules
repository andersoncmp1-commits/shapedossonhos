
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Regra para a coleção de progresso do usuário
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para os comentários das aulas de confissão
    match /confession_lesson_comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
