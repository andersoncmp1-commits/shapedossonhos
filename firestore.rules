
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção de comentários do curso de confissão
    match /confession_lesson_comments/{commentId} {
      // Qualquer usuário autenticado pode ler (get) um comentário individual.
      allow get: if request.auth != null;
    }

    match /confession_lesson_comments {
        // Qualquer usuário autenticado pode listar (list) os comentários.
        // Isso é necessário para a consulta com 'where'.
        allow list: if request.auth != null;
        
        // Um usuário autenticado pode criar (create) um novo comentário
        // se o userId no documento for o mesmo do seu próprio uid.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Regra geral para a coleção de usuários
    match /users/{userId} {
      // Permite que um usuário leia e escreva apenas em seu próprio documento.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
