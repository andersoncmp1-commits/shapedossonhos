rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de comentários
    match /confession_lesson_comments/{commentId} {
      // Permite leitura (get) e listagem (list) para qualquer usuário autenticado.
      allow read: if request.auth != null;

      // Permite a criação de um novo comentário se o usuário estiver autenticado e o 'userId' no novo documento for o mesmo que o do autor da requisição.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Regras para a coleção de usuários
    match /users/{userId} {
      // Permite que um usuário leia e atualize seu próprio documento.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Permite a criação de um documento de usuário.
      allow create: if request.auth != null;
    }
  }
}
