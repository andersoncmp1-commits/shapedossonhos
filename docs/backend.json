{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "A user's public profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "completedModules": {
          "type": "array",
          "description": "List of completed module IDs.",
          "items": {
            "type": "string"
          }
        },
        "completedConfessionLessons": {
          "type": "array",
          "description": "List of completed confession lesson IDs.",
          "items": {
            "type": "string"
          }
        },
        "completedWorkoutLessons": {
          "type": "array",
          "description": "List of completed workout lesson IDs.",
          "items": {
            "type": "string"
          }
        },
        "completedChallengeDays": {
          "type": "array",
          "description": "List of completed 20-day challenge day IDs.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "email"
      ]
    },
    "admin": {
      "title": "Admin",
      "description": "An administrator user with elevated privileges.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The admin's email address."
        },
        "role": {
          "type": "string",
          "enum": [
            "admin"
          ],
          "description": "The role of the user."
        }
      },
      "required": [
        "email",
        "role"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "User documents, keyed by user ID."
    },
    "/admins/{adminId}": {
      "schema": {
        "$ref": "#/entities/admin"
      },
      "description": "Admin user documents, used for role-based access control."
    }
  }
}
